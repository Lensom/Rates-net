@import "_vars.styl"

/*==========  Desktop First  ==========*/

@media (max-width : 1440px)
	.map
		&__background-wrapper 
			max-width 1200px
			margin 0 auto 
		&__item
			font-size 14px

@media (max-width : 1200px)
	.wrapper
		padding 0 30px
	.header 
		&__contacts 
			justify-content flex-start
			padding-left 0
		&__link
			margin-right 20px
			&:last-child
				margin-right 0
		&__anoun 
			width 381px
			overflow hidden
			text-overflow ellipsis
			white-space nowrap
		&__top
			padding 15px 0
		&__menu
			margin-right 20px
			li 
				margin-left 30px

	.map
		min-height 520px
		&__background-wrapper 
			max-width 992px
			margin 0 auto 
	.how
		&__item 
			padding 40px 30px 50px
			max-width 310px
	.line
		&__wrapper 
			margin-right 5px
	.footer
		&__menu
			&-wrapper 
				margin-left 50px
	.for 
		&__item 
			width 48%
			min-height 245px
			max-width none 
			margin 0 0 30px 0
			&:nth-child(even)
				margin-left 14px
			&:nth-child(odd)
				margin-right 14px
		&__wrapper 
			flex-wrap wrap 

	

@media (max-width : 992px)
	.map
		overflow hidden
		left 0
		&__background
			width 100%
			left 50%
			position absolute
			transform translateX(-50%)
			max-width none
			&-wrapper 
				position absolute
				top 0
				left 50%
				right 0
				bottom 0
				transform translateX(-50%)
				overflow hidden
				width 1040px
	.how 
		&__item 
			max-width none 
			width 48%
			&:first-child
				margin-right 25px
	.header
		&__logo
			max-width 180px
	.title
		max-width 594px
		margin 0 auto 
	.lines
		padding 75px 0 85px
		&__wrapper
			flex-direction column 
			align-items flex-start
			margin-top 30px
		&__sort
			top auto 
		&__text
			p 
				line-height 35px
				font-size 25px
	.line
		order 1
		transform translateY(-50%)
		top 10px
		&__wrapper 
			display flex
			height 20px
			width 100%
			position relative
		&__info
			display flex
			justify-content space-between
			writing-mode inherit
			order 0 
			width 100px
			height auto 
			span
				order 0
				padding-top 0
				display flex
				align-items center
			img 
				align-self center 
				order 1
	.footer
		&__menu
			&-wrapper 
				margin 0
				flex-wrap wrap 
				max-width 620px
			&-item 
				width 50%
				padding-left 80px
		&__center 
			margin-right 0
	.faq 
		padding 30px 0 52px
		&__wrapper 
			flex-direction column 
		&__dropdown 
			max-width none 
		&__title 
			padding-right 0
		.title 
			margin 0
			max-width none 
			br 
				display none
	.how
		&__item
			min-height 300px
			&-4
				order 2
			&-5
				order 1
			
@media (max-width : 767px)
	.wrapper 
		padding 0 20px
	.header
		&__menu
			margin 0
			flex-direction column
			align-items center 
			li 
				margin 0 0 15px 0
			a
				font-size 20px
				color $black
				letter-spacing 1.43px
				line-height 30px
				text-transform uppercase
			&-wrapper 
				position fixed
				background $white
				z-index 10
				z-index -1
				bottom 0
				top 0 
				left 0 
				right 0
				display flex
				align-items center 
				flex-direction column 
				justify-content center 
				margin 0
				height 100vh
				width 100vw
				transform translateX(-100%)
				transition all .3s ease 
		&__btns 
			flex-direction column
			align-items center  
			max-width 215px
			width 100%
		&__btn 
			margin 0 0 15px 0
			width 100%
			a 
				margin 0
				width 100%
				text-align center
		&__mobile
			display block 
		&__anoun 
			display none
		&__contacts 
			width 100%
			justify-content space-between
	.btn
		font-size 15px
		padding 13px 20px
	.selection
		top -110px
	.footer
		&__center
			flex-direction column 
			a 
				font-size 15px
		&__menu
			&-item 
				padding-left 0
				padding-right 20px
				p 
					br
						display none
	.show
		.header__anoun 
			display block
			position fixed
			bottom 0
			left 0
			right 0 
			width 100%
			height 100%
			max-height 100px
			background-color #f6f7fa
			text-overflow inherit 
			font-size 14px
			color $gray
			line-height 20px
			white-space inherit 
			text-align center
			padding 20px
	.for
		padding 80px 0 70px
		&__item
			&:nth-child(odd)
				margin-right 5px
			&:nth-child(even)
				margin-left 5px
		&__risk 
			text-align left
			margin-top -20px

@media (max-width : 480px)
	.header
		&__contacts 
			justify-content space-between
		&__link 
			margin-right 0
	.title 
		font-size 40px
		line-height 50px
	.footer 
		padding 80px 0 40px
		&__center
			margin 40px 0 20px
			p 
				font-size 15px
		&__menu
			&-item 
				margin-bottom 10px
			&-wrapper 
				margin-top 26px
		&__bottom 
			flex-direction column 
			align-items flex-start
			padding-top 30px
		&__copyright 
			order 1
			margin-top 22px
		&__list 
			order 0
	.accordion
		&__thumb
			padding 25px 0 0 25px
		&__panel 
			padding 25px 0 0 25px
	.for 
		&__item
			width 100%
			&:nth-child(odd),
			&:nth-child(even)
				margin 0 0 30px 0
		&__wrapper 
			margin 24px 0 20px
	.subtitle
		text-align left 
	.how 
		&__item
			width 100%
			&:first-child
				margin-right 0
			&:nth-child(3n-1)
				margin 0 0 50px 0
			margin 0 0 50px 0
			&:after 
				background-image url("../img/down__arrow.svg")
				height 76px
				width 14px
				top 100%
				left 50%
				transform translate(-50%, -10%)

@media (max-width : 379px)
	.header
		&__top 
			a 
				font-size 12px
		&__anoun 
			margin-top 15px
			font-size 12px
