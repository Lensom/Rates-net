.wrapper 
    max-width 1210px
    width 100%
    margin 0 auto 
    position relative
    padding 0 20px

.title 
    font-family $avenir-font
    font-weight 600
    font-size 50px
    color $black
    line-height 60px
    text-align center
    position relative
    z-index 1

.subtitle
    font-family $avenir-font
    font-weight 600
    font-size 30px
    color $black
    line-height 40px

.text 
    font-weight 400
    font-size 20px
    color $gray-2
    line-height 30px

.main 
    padding-top 30px
    overflow hidden

.btn
    font-family $avenir-font
    font-weight 500
    font-size 14px
    color $white
    letter-spacing 1px
    text-transform uppercase
    display inline-block
    padding 7px 23px 6px
    margin-left 10px
    transition background .3s ease 
    &__login
        background $blue
        &:hover
            background #0046ba
    &__open
        background $blue-btn
        padding 7px 20px 6px
        &:hover
            background #fc4747

.show 
    position fixed
    width 100%
    .header
        &__menu-wrapper
            transform translateX(0)
            visibility visible
        &__mobile-line
            &-1 
                transform rotate(45deg)
                top 8px
            &-2 
                opacity 0
            &-3 
                transform rotate(-45deg)
                top 8px
    